<%= form_for(@service ,:html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-body">
    <div class="form-group">
      <label class="col-md-3 control-label">Name*</label>
      <div class="col-md-6">
        <%= f.text_field :name,:class=>"form-control",:placeholder=> "Name"  %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-md-3 control-label">Description</label>
      <div class="col-md-6">
        <%= f.text_field :description,:class=>"form-control",:placeholder=> "Description"  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Imageurl</label>
      <div class="col-md-6">
        <%= f.text_field :imageurl,:class=>"form-control",:placeholder=> "Imageurl"  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Imageurl</label>
      <div class="col-md-6">
        <%= f.file_field :image %>
        <%#= f.text_field :imageurl,:class=>"form-control",:placeholder=> "Imageurl"  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-3 control-label">Category</label>
      <div class="col-md-6">
        <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %>
      </div>
    </div>

    <div class="form-group">
      <div class="header co ntent-header well">
        <div style="margin-left: 497px;">
          <%= f.submit 'Create Service', :class => 'btn btn-info' %>
          <%= link_to "Back", services_path, :class => 'btn btn-default' %>
        </div>
      </div>
    </div>
</div>
<% end %>




