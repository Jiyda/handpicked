<%= form_for(@service ,:html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="span12"> 
    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Name*</label>
      <div class="controls">  
        <%= f.text_field :name,:class=>"name-tag string provider-name",:placeholder=> "Name"  %>
      </div>
    </div>
    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Description</label>
      <div class="controls">  
        <%= f.text_field :description,:class=>"name-tag string provider-name",:placeholder=> "Description"  %>
      </div>
    </div>
    <div id="dropbox" class="control-group controls">
      <span class="message">Drop images here to upload. <br /><i>(they will only be visible to you)</i></span>
    </div>
    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Imageurl</label>
      <div class="controls">  
        <%= f.text_field :imageurl,:class=>"name-tag string provider-name",:placeholder=> "Imageurl"  %>
      </div>
    </div>
    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Upload Image</label>
      <div class="controls">  
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Category</label>
      <div class="controls">  
        <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] } %>
      </div>
    </div>
    <div class="actions form-actions">      
      <%= f.submit 'Create Service', :class => 'btn btn-primary button submit-button' %>
    </div>
  </div>
<% end %>