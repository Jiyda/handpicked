 <div class="container bootstrap-content">
  <div class="row main-row">
    <div class="span12 main-column">
    <div class="section with-flash content">    
      <div class="section main-content">      
        <div class="header co ntent-header well">
          <a class="btn pull-right btn-info new-link new-category-link" href="<%= new_provider_path%>" style="color: white" rel="nofollow">        New Provider
          </a><h2 class="heading">Provider Index</h2>
        </div>
        <div class="section content-body">    
          <table class="table table-striped table-bordered collection">
            <tr>
              <td>Provider</td>
              <td>Description</td>
              <td>Website</td>
              <td>Pricerange</td>
              <td>Rating</td>
              <td>Imageurl</td>
              <td>Actions</td>

            </tr>
            <% @providers.each do |provider| %>
              <tr>
                <td style="color: #0088cc;"><%=link_to "#{provider.name}",:url=>provider_path(provider)  %></td>
                <td><%= provider.description %></td>
                <td><%= provider.website %></td>
                <td><%= provider.pricerange %></td>
                <td><%= provider.rating %></td>
                <td><%= provider.imageurl %></td>
                <td>
                  <%= link_to 'Show', provider %>
                  <%= link_to 'Edit', edit_provider_path(provider) %>
                  <%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
                </tr>
            <% end %>
          </table>
          <div class="empty-collection-message" style="">      No records to display
          </div>
          <div class="pagination">  
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>