<%= form_for(@provider ,:html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% @provider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="span12"> 
    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Name</label>
      <div class="controls">  
        <%= f.text_field :name,:class=>"name-tag string provider-name",:placeholder=> "Name"  %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Description</label>
      <div class="controls">  
        <%= f.text_field :description,:class=>"name-tag string provider-name",:placeholder=> "Description"  %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Rating</label>
      <div class="controls">  
        <%= f.text_field :rating,:class=>"name-tag string provider-name",:placeholder=> "Rating"  %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Pricerange</label>
      <div class="controls">  
        <%= f.text_field :pricerange,:class=>"name-tag string provider-name",:placeholder=> "Pricerange"  %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Website</label>
      <div class="controls">  
        <%= f.text_field :website,:class=>"name-tag string provider-name",:placeholder=> "Website"  %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Imageurl</label>
      <div class="controls">  
        <%= f.text_field :imageurl,:class=>"name-tag string provider-name",:placeholder=> "Imageurl"  %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Select Image</label>
      <div class="controls">  
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="control-group   name-field">
      <label class="control-label name-label" for="provider_name">Select Service</label>
      <div class="controls">  
        <%= f.select :service_id, Service.all.map{ |c| [c.name, c.id] },:class=>"name-tag string provider-name"  %>
      </div>
    </div>



    <div class="actions form-actions">      
      <%= f.submit 'Create Provider', :class => 'btn btn-primary button submit-button' %>
    </div>

  </div>
<% end %>
