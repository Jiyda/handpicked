<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {:class=>"form-horizontal", method: :post }) do |f| %>
  <%= devise_error_messages! %>


	<div class="form-body">
    <div class="form-group">
      <label class="col-md-3 control-label">Email</label>
      <div class="col-md-3">
      	<%= f.email_field :email, autofocus: true ,:class=>"form-control",:placeholder=> "Email"   %>
      </div>
    </div>



  <div><%= f.submit "Send me reset password instructions", :class=>"btn btn-info", :style=>"margin-left: 283px;"%></div>
<% end %>
</div>



