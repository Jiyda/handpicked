<div class="login-form">
  <div class="login-form-wrap">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header">Sign in to HandPicked</h1>
      <div class="wrapper-form form-login">
        <section class="wrapper-facebook">
          <a href="<%= user_omniauth_authorize_path(:facebook) %>" class="connect-service btn-social facebook">Sign in with <strong>Facebook</strong></a>
        </section>
        <h3 style="text-align: center;font-size: 18px;color: #f1f1f1;" >OR</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{:class=>"form-stacked form-signup"}) do |f| %>
          <fieldset>
            <div class="wrapper-input">
              <div class="input">
              	<%= f.email_field :email, autofocus: true,:class=>"xlarge",:placeholder=> "Email" %>
              </div>
            </div>
            <div class="wrapper-input">
              <div class="input">
              	<%=f.password_field :password, autocomplete: "off",:class=>"xlarge",:placeholder=> "Password" %>
                <a class="action" tabindex="-1" href="/reset-password">Forgot your password?</a>
              </div>
            </div>
            <div class="remember-container" style="">
              <div class="input">
                <label style="display: none">
                	<% if devise_mapping.rememberable? -%>
								    <div><%= f.check_box :remember_me %></div>
								  <% end -%>
                  <span>Remember me</span>
                </label>
              </div>
            </div>
            <div class="actions">
            	<%= f.submit "Sign in", :class=>"btn primary submit large" ,:style=>"width: 150px;height: 42px;"%>
            </div>
          </fieldset>
        <%end%>
      </div>
    </div>
  </div>
</div>



