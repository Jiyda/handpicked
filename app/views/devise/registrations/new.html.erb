<div class="login-form">
  <div class="login-form-wrap">
    <div class="login-form-wrap-center">
      <h1 class="sign-up-header">Sign up to HandPicked</h1>
      <div class="wrapper-form form-login">
        <section class="wrapper-facebook">
          <a href="<%= user_omniauth_authorize_path(:facebook) %>" class="connect-service btn-social facebook">Sign in with <strong>Facebook</strong></a>
        </section>
        <h3 style="text-align: center;font-size: 18px;color: #f1f1f1;" >OR</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html=>{:class=>"form-stacked form-signup"}) do |f| %>
          <fieldset>
            <div class="wrapper-input">
              <div class="input">
                <%= f.text_field :name,:class=>"xlarge",:placeholder=> "Name" %>
              </div>
            </div>
            <div class="wrapper-input">
              <div class="input">
                <%= f.email_field :email, autofocus: true,:class=>"xlarge",:placeholder=> "Email" %>
              </div>
            </div>
            <div class="wrapper-input">
              <div class="input">
                <%= f.password_field :password,:class=>"xlarge",:placeholder=> "Password"  %>
                <% if @validatable %>
                  <i>(<%= @minimum_password_length %> characters minimum)</i>
                <% end %>
              </div>
            </div>
            <div class="wrapper-input">
              <div class="input">
                <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"xlarge",:placeholder=> "Password Confirmation"  %>
              </div>
            </div>
            <div class="wrapper-input">
              <div class="input">
                <%= f.file_field :avatar %>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "Sign in", :class=>"btn primary submit large" ,:style=>"width: 150px;height: 42px;"%>
            </div>
          </fieldset>
        <%end%>
      </div>
    </div>
  </div>
</div>















