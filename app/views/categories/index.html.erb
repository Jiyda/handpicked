<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="container bootstrap-content">
  <div class="row main-row">
    <div class="span12 main-column">
    <div class="section with-flash content">    
      <div class="section main-content">  
        <div class="header co ntent-header well">
          <% if user_signed_in? %>    
            <a class="btn pull-right btn-primary new-link new-category-link" href="<%= new_category_path%>" style="color: white" rel="nofollow">        New Category
          <% end %>
          </a><h2 class="heading">Category Index</h2>
        </div>
        <div class="section content-body">    
          <table class="table table-striped table-bordered collection">
            <tr>
              <td>Category</td>
              <td>Actions</td>
            </tr>
            <% @categories.each do |category| %>

              <tr class="odd category" data-rapid-context="category:1">                
                <td class="this-view">  
                  <span class="view model::category:1">
                    <a class="category-link" href="<%#= category_path %>" rel="nofollow">
                      <span class="view category-name "><%=link_to "#{category.name}", category %></span>
                    </a>
                  </span>
                </td>
                <td class="actions-view">
                  <% if user_signed_in? %>
                    <% if (category.user_id == current_user.id) || current_user.is_admin?  %>
                      <a href="<%= edit_category_path(category) %>">
                        <i class="fa fa-fw fa-pencil-square-o"></i>
                      </a>
                      <a href=""><%= link_to ""%>
                        <%= link_to '<i class="fa fa-trash-o fa-fw"></i>'.html_safe, category , :method=>"delete" , data: {confirm: "Are you sure?"} %>
                      </a>
                    <%end%>
                  <%end%>
                </td>
              </tr>
            <% end %>
          </table>
          <div class="empty-collection-message" style="">      No records to display
          </div>
          <div class="pagination">  
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>


