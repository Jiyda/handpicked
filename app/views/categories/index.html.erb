<div class="container bootstrap-content">
  <div class="row main-row">
    <div class="span12 main-column">
    <div class="section with-flash content">    
      <div class="section main-content">  
        <div class="header co ntent-header well">
      <% if user_signed_in? %>    
          <a class="btn pull-right btn-info new-link new-category-link" href="<%= new_category_path%>" style="color: white" rel="nofollow">        New Category
      <% end %>
          </a><h2 class="heading">Category Index</h2>
        </div>
        <div class="section content-body">    
          <table class="table table-striped table-bordered collection">
            <tr>
              <td>Category</td>
              <td>Actions</td>
            </tr>
            <% @categories.each do |category| %>
              <tr>
                <td style="color: #0088cc;"><%=link_to "#{category.name}", category, :style=>"color: #0088cc;" %></td>
                <td>
                  <%= link_to 'Show', category %>
                  <% if user_signed_in? %>
                    <% if category.user_id == current_user.id %>
                      <%= link_to 'Edit', edit_category_path(category) %>
                      <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <%end%>
                  <%end%>
                </td>
                </tr>
            <% end %>
          </table>
          <div class="empty-collection-message" style="">      No records to display
          </div>
          <div class="pagination">  
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>