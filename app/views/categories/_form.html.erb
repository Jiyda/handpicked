<%= form_for(@category ,:html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="span12"> 
  <div class="control-group   name-field">
    <label class="control-label name-label" for="category_name">Name</label>
    <div class="controls">  
      <%= f.text_field :name,:class=>"name-tag string category-name",:placeholder=> "Name"  %>           
    </div>
  </div>
</div>


<div class="actions form-actions">      
  <%= f.submit 'Create Category', :class => 'btn btn-primary button submit-button' %>
</div>


<% end %>

